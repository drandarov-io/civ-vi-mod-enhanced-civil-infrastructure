<?xml version="1.0" encoding="utf-8"?>
<!-- Enhanced Civil Infrastructure -->
<!-- Author: DahakaMVl -->
<GameData>
	<Units>
		<Update>
			<Where UnitType="UNIT_MILITARY_ENGINEER" />
			<Set>
				<BaseMoves>3</BaseMoves>
				<BuildCharges>3</BuildCharges>
			</Set>
		</Update>
	</Units>

	<Routes>
		<Update>
			<Where RouteType="ROUTE_ANCIENT_ROAD" />
			<Set>
				<MovementCost>0.65</MovementCost>
				<SupportsBridges>true</SupportsBridges>
			</Set>
		</Update>
		<Update>
			<Where RouteType="ROUTE_MEDIEVAL_ROAD" />
			<Set MovementCost="0.5" />
		</Update>
		<Update>
			<Where RouteType="ROUTE_INDUSTRIAL_ROAD" />
			<Set MovementCost="0.35" />
		</Update>
		<Update>
			<Where RouteType="ROUTE_MODERN_ROAD" />
			<Set MovementCost="0.25" />
		</Update>
		<Update>
			<Where RouteType="ROUTE_RAILROAD" />
			<Set MovementCost="0.125" />
		</Update>
	</Routes>

	<Districts>
		<Update>
			<Where DistrictType="DISTRICT_CANAL" />
			<Set>
				<PrereqTech>TECH_ENGINEERING</PrereqTech>
				<Cost>55</Cost>
				<Housing>1</Housing>
			</Set>
		</Update>
	</Districts>

	<Buildings>
		<Update>
			<Where BuildingType="BUILDING_LIME_BRIDGE" />
			<Set>
				<PrereqTech>TECH_CONSTRUCTION</PrereqTech>
				<Cost>60</Cost>
				<Housing>1</Housing>
			</Set>
		</Update>
		<Update>
			<Where BuildingType="BUILDING_PANAMA_CANAL" />
			<Set MaxWorldInstances="-1" />
		</Update>
	</Buildings>

	<Building_YieldChanges>
		<Update>
			<Where BuildingType="BUILDING_PANAMA_CANAL" />
			<Set YieldChange="20" />
		</Update>
	</Building_YieldChanges>

	<BuildingModifiers>
		<Row BuildingType="BUILDING_LIME_BRIDGE" ModifierId="BUILDING_LIME_BRIDGE_TRADE_DOMESTIC_CULTURE" />
		<Row BuildingType="BUILDING_PANAMA_CANAL" ModifierId="BUILDING_PANAMA_CANAL_TRADE_DOMESTIC_PRODUCTION" />
	</BuildingModifiers>

	<Modifiers>
		<Row>
			<ModifierId>BUILDING_LIME_BRIDGE_TRADE_DOMESTIC_CULTURE</ModifierId>
			<ModifierType>MODIFIER_SINGLE_CITY_ADJUST_TRADE_ROUTE_YIELD_TO_OTHERS</ModifierType>
		</Row>
		<Row>
			<ModifierId>BUILDING_PANAMA_CANAL_TRADE_DOMESTIC_PRODUCTION</ModifierId>
			<ModifierType>MODIFIER_SINGLE_CITY_ADJUST_TRADE_ROUTE_YIELD_TO_OTHERS</ModifierType>
		</Row>
	</Modifiers>

	<ModifierArguments>
		<Row>
			<ModifierId>BUILDING_LIME_BRIDGE_TRADE_DOMESTIC_CULTURE</ModifierId>
			<Name>Amount</Name>
			<Value>2</Value>
		</Row>
		<Row>
			<ModifierId>BUILDING_LIME_BRIDGE_TRADE_DOMESTIC_CULTURE</ModifierId>
			<Name>YieldType</Name>
			<Value>YIELD_CULTURE</Value>
		</Row>
		<Row>
			<ModifierId>BUILDING_LIME_BRIDGE_TRADE_DOMESTIC_CULTURE</ModifierId>
			<Name>Domestic</Name>
			<Value>true</Value>
		</Row>
		<Row>
			<ModifierId>BUILDING_PANAMA_CANAL_TRADE_DOMESTIC_PRODUCTION</ModifierId>
			<Name>Amount</Name>
			<Value>4</Value>
		</Row>
		<Row>
			<ModifierId>BUILDING_PANAMA_CANAL_TRADE_DOMESTIC_PRODUCTION</ModifierId>
			<Name>YieldType</Name>
			<Value>YIELD_PRODUCTION</Value>
		</Row>
		<Row>
			<ModifierId>BUILDING_PANAMA_CANAL_TRADE_DOMESTIC_PRODUCTION</ModifierId>
			<Name>Domestic</Name>
			<Value>true</Value>
		</Row>
	</ModifierArguments>

	<Improvements>
		<Update>
			<Where ImprovementType="IMPROVEMENT_MOUNTAIN_TUNNEL" />
			<Set PrereqTech="TECH_MILITARY_SCIENCE" />
		</Update>
	</Improvements>

	<!-- Workaround to enable Canals on Hills -->
	<Terrains>
		<Update>
			<Where TerrainType="TERRAIN_GRASS_HILLS" />
			<Set Hills="false" />
		</Update>
		<Update>
			<Where TerrainType="TERRAIN_PLAINS_HILLS" />
			<Set Hills="false" />
		</Update>
		<Update>
			<Where TerrainType="TERRAIN_TUNDRA_HILLS" />
			<Set Hills="false" />
		</Update>
		<Update>
			<Where TerrainType="TERRAIN_SNOW_HILLS" />
			<Set Hills="false" />
		</Update>
		<Update>
			<Where TerrainType="TERRAIN_DESERT_HILLS" />
			<Set Hills="false" />
		</Update>
	</Terrains>

	<District_ValidTerrains>
		<Row DistrictType="DISTRICT_CANAL" TerrainType="TERRAIN_GRASS_HILLS" />
		<Row DistrictType="DISTRICT_CANAL" TerrainType="TERRAIN_PLAINS_HILLS" />
		<Row DistrictType="DISTRICT_CANAL" TerrainType="TERRAIN_TUNDRA_HILLS" />
		<Row DistrictType="DISTRICT_CANAL" TerrainType="TERRAIN_SNOW_HILLS" />
		<Row DistrictType="DISTRICT_CANAL" TerrainType="TERRAIN_DESERT_HILLS" />
	</District_ValidTerrains>

	<District_TradeRouteYields>
		<Row DistrictType="DISTRICT_CANAL" YieldType="YIELD_GOLD" YieldChangeAsOrigin="2" YieldChangeAsDomesticDestination="0" YieldChangeAsInternationalDestination="2" />
		<Row DistrictType="DISTRICT_CANAL" YieldType="YIELD_FOOD" YieldChangeAsOrigin="0" YieldChangeAsDomesticDestination="2" YieldChangeAsInternationalDestination="0" />
	</District_TradeRouteYields>

	<District_Adjacencies>
		<Row DistrictType="DISTRICT_COMMERCIAL_HUB" YieldChangeId="Canal_Gold" />
		<Row DistrictType="DISTRICT_HARBOR" YieldChangeId="Canal_Gold" />
	</District_Adjacencies>

	<Adjacency_YieldChanges>
		<Row ID="Canal_Gold" Description="LOC_DISTRICT_CANAL_GOLD" YieldType="YIELD_GOLD" YieldChange="2" TilesRequired="1" AdjacentDistrict="DISTRICT_CANAL" />
	</Adjacency_YieldChanges>

	<EnglishText>
		<Row Tag="LOC_DISTRICT_CANAL_GOLD">
			<Text>+{1_num} [ICON_GOLD] Gold from the adjacent Canal {1_Num : plural 2?district; other?districts;}.</Text>
		</Row>
	</EnglishText>
</GameData>
